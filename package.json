{
  "name": "kurt3-signup-tool",
  "version": "1.0.3",
  "description": "KURT3 Signup Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "be.matsevh.kurt3.signup.Tool",
    "productName": "KURT3 Signup Tool",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "**/*",
      "build/icon.*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^26.0.12"
  }
}
